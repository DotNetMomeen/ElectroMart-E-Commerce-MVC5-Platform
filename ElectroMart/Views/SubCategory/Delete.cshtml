
@model ElectroMart.Models.InputModel.SubCategory

@{
    ViewBag.Title = "Delete";
}

<style>
    .form-container {
        max-width: 800px;
        margin: auto;
        border: 2px solid #ddd;
        padding: 35px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0,0,0,0.1);
        background-color: #f9f9f9;
        margin-top: 60px;
    }

    .form-title {
        text-align: center;
        font-weight: bold;
        color: darkred;
        margin-bottom: 35px;
        margin-top: 5px;
    }

    .form-actions {
        text-align: right;
        margin-top: 1.5rem;
    }

    .back-to-list {
        margin-top: 1rem;
    }
</style>

<div class="form-container">
    <h2 class="display-3 form-title">Delete SubCategory</h2>

    <h3 style="text-align:center;">Are you sure you want to delete this?</h3>
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.Category.CategoryName)</dt>
        <dd>@Html.DisplayFor(model => model.Category.CategoryName)</dd>

        <dt>@Html.DisplayNameFor(model => model.SubCategoryName)</dt>
        <dd>@Html.DisplayFor(model => model.SubCategoryName)</dd>
    </dl>

    <div id="deleteMessage">

    </div>

    @using (Ajax.BeginForm("Delete", "SubCategory", new AjaxOptions { HttpMethod = "POST", OnSuccess = "onDeleteSuccess" }, new { @id = "deleteForm" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)

        <div class="form-actions">
            <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i> Delete</button>
            <a href="@Url.Action("Index","SubCategory")" class="btn btn-warning">Cancel</a>
        </div>
    }

    <div class="d-flex justify-content-start back-to-list">
        <a href="@Url.Action("Index", "SubCategory")" class="btn btn-link"><i class="fa fa-arrow-circle-left"></i> Back to list</a>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/jquery-3.7.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

    <script>
        $(function () {
            $('form[data-ajax="true"]').on('submit', function (e) {
                e.preventDefault();
                $.ajax({
                    url: $(this).attr('action'),
                    type: $(this).attr('method'),
                    data: $(this).serialize(),
                    success: function (data) {
                        $('#deleteMessage').html(data); // Update the target div with the partial view
                    }
                });
            });
        });

        function onDeleteSuccess() {
            // Optional: Redirect or perform any action after deletion
            window.location.href = '@Url.Action("Index", "SubCategory")';
        }
    </script>
}

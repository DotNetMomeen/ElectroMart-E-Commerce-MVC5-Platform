@model ElectroMart.Models.InputModel.SubCategory

@{
    ViewBag.Title = "Create";
}

<style>
    .form-container {
        max-width: 800px;
        margin: auto;
        border: 2px solid #ddd;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0,0,0,0.1);
        background-color: #f9f9f9;
        margin-top: 75px;
    }

    .form-title {
        text-align: center;
        font-weight: bold;
        color: darkred;
        margin-bottom: 35px;
        margin-top: 10px;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    .btn {
        margin-top: 1rem;
    }

    .back-to-list {
        margin-top: 1rem;
    }
</style>

<div class="form-container">
    <h2 class="display-3 form-title">New Sub-Category</h2>

    @using (Ajax.BeginForm(new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "msg", OnComplete = "clearAll" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group row">
            @Html.LabelFor(x => x.CategoryId, "Category", htmlAttributes: new { @class = "control-label col-md-3 text-right" })
            <div class="col-md-9">
                @Html.DropDownListFor(x => x.CategoryId, new SelectList(ViewBag.categoryList, "Id", "CategoryName"), "--------Select Sub-Category-------", new { @class = "form-select" })
                @Html.ValidationMessageFor(x => x.CategoryId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(x => x.SubCategoryName, "Sub Category", htmlAttributes: new { @class = "control-label col-md-3 text-right" })
            <div class="col-md-9">
                @Html.TextBoxFor(x => x.SubCategoryName, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.SubCategoryName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-9 offset-3" id="msg">

            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-9 offset-md-3 text-right">
                <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Save</button>
                @*<a href="@Url.Action("Index","SubCategory")" class="btn btn-warning">Cancel</a>*@
            </div>
        </div>

        <div class="d-flex justify-content-start back-to-list">
            <a href="@Url.Action("Index", "SubCategory")" class="btn btn-link"><i class="fa fa-arrow-circle-left"></i> Back to list</a>
        </div>
    }
</div>

@section scripts {
    <script src="~/Scripts/jquery-3.7.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

    <script>
        $(document).ready(function () {
            $("#cat").change(function () {
                var id = $(this).val(); // Get the selected Category ID
                console.log("Selected Category ID:", id);

                $.ajax({
                    url: '/Brands/getSubCategories/' + id,
                    type: 'GET',
                    dataType: 'json',
                    success: function (data) {
                        console.log("SubCategories Data:", data);
                        $("#sCat").empty();
                        $("#sCat").append('<option value="">-----Sub Category-----</option>');
                        $.each(data, function (i, obj) {
                            var option = '<option value="' + obj.Id + '">' + obj.SubCategoryName + '</option>';
                            $("#sCat").append(option);
                        });
                    },
                    error: function (xhr, status, error) {
                        console.log("Error:", error);
                    }
                });
            });
        });

    </script>

    <script>
        $("#form0").attr("enctype", "multipart/form-data")
        function clearAll() {
            $("#form0").trigger("reset");
        }
    </script>

}


@model IEnumerable<ElectroMart.Models.RetriveProductView>

@{
    ViewBag.Title = "Index";
}

<!--slider caroseoul images begin-->

<div class="container-fluid p-0">
    <div id="carouselExampleDark" class="carousel carousel-dark slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="2" aria-label="Slide 3"></button>
            <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="3" aria-label="Slide 4"></button>
            <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="4" aria-label="Slide 5"></button>
        </div>
        <div class="carousel-inner">

            <div class="carousel-item active" data-bs-interval="10000">
                <img src="~/Images/black_friday_web_banner_18.jpg" class="d-block w-100" style="height:900px;" alt="Slide 1" />
                <div class="carousel-caption d-none d-md-block text-light">
                    @*<h5>First slide label</h5>
                        <p>Some representative placeholder content for the first slide.</p>*@
                </div>
            </div>

            <div class="carousel-item" data-bs-interval="2000">
                <img src="~/Images/Black-Friday_web_banner_20.jpg" class="d-block w-100" style="height: 900px;" alt="Slide 2" />
                <div class="carousel-caption d-none d-md-block text-light">
                    @*<h5>Second slide label</h5>
                        <p>Some representative placeholder content for the second slide.</p>*@
                </div>
            </div>

            <div class="carousel-item">
                <img src="~/Images/Black-Friday_web_banner_04.jpg" class="d-block w-100" style="height: 900px;" alt="Slide 3" />
                <div class="carousel-caption d-none d-md-block text-light">
                    @*<h5>Third slide label</h5>
                        <p>Some representative placeholder content for the third slide.</p>*@
                </div>
            </div>

            <div class="carousel-item">
                <img src="~/Images/10285882.jpg" class="d-block w-100" style="height: 900px;" alt="Slide 4" />
                <div class="carousel-caption d-none d-md-block text-light">
                    @*<h5>Fourth slide label</h5>
                        <p>Some representative placeholder content for the third slide.</p>*@
                </div>
            </div>

            <div class="carousel-item">
                <img src="~/Images/Black-Friday_web_banner_14.jpg" class="d-block w-100" style="height: 900px;" alt="Slide 5" />
                <div class="carousel-caption d-none d-md-block text-light">
                    @*<h5>Fifth slide label</h5>
                        <p>Some representative placeholder content for the third slide.</p>*@
                </div>
            </div>
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>

        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>
<!--slider images end-->
<!--Navbar for Home page begin-->

<nav class="navbar navbar-expand-sm navbar-toggleable-sm container-fluid bg-light pt-2" style="font-weight:bold;">
    <div class="container">
        <a class="navbar-brand" href="@Url.Action("Index", "Home")">

            <img src="~/Images/logo.jpg" width="50" height="50" class="me-1 navbar-brand" />
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menubar" aria-controls="menubar" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="menubar">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    @Html.ActionLink("Shopping", "Index", "ViewProduct", new { area = "" }, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Categories", "Category", "ViewProduct", new { area = "" }, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Sub Categories", "SubCategory", "ViewProduct", new { area = "" }, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Brands", "Brand", "ViewProduct", new { area = "" }, new { @class = "nav-link" })
                </li>
            </ul>
            <form class="d-flex">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
        </div>
    </div>
</nav>

<!--Navbar for Home page end-->
<!--All Product Section Begin-->

<h2 class=" container-fluid mb-4 text-center display-4 mt-4 " style="color:darkred;font-weight:bold;">All Products View</h2>
<div class="container mt-0">
    <div class="row">

        @foreach (var p in Model)
        {
            <div class="col-md-3 border-primary mb-3">
                <div class="card mb-4" style="max-width:540px;">
                    <div class="row g-0">
                        <div class="col-md-12">
                            <img src="@Url.Content(p.Images)" style="width:100%;height:350px;" />
                        </div>
                        <div class="col-md-12">
                            <div class="card-body">
                                <p class="card-text"><b>Brand: </b>@Html.DisplayFor(x => p.BrandName)</p>
                                <p class="card-text"><b>Unit Price: </b>TK-@Html.DisplayFor(x => p.UnitPrice)</p>
                                <p class="card-text">
                                    <b>Status: </b>
                                    @if (p.QuantityInStock != 0)
                                    {
                                        <span class="badge bg-success text-white fw-bold">Available</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger text-white fw-bold">Not Available</span>
                                    }
                                </p>

                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="card-footer" style="background-color: #996515 ">
                                <p class="card-text">
                                    <a href="@Url.Action("ShowProduct","ViewProduct",new { id=p.ProductId})" class="btn" style="background-color: white; border: none; color: #800080; font-weight: bold; " >Show Details</a>
                                    @*<a href="#" class="btn btn-success text-white">Add To Cart</a>*@

                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        }

    </div>

</div>

<!--All Product Section End-->

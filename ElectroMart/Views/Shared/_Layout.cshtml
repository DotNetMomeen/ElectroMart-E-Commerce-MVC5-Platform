<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Electro Mart</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.7.0.js"></script>

    <style>
        body {
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
            font-size:1em;
            background-color: antiquewhite;
        }

        footer ul.list-unstyled li {
            margin-bottom: 8px;
        }

            footer ul.list-unstyled li a {
                color: #333;
                font-size: 14px;
                text-decoration: none;
            }

                footer ul.list-unstyled li a:hover {
                    color: #555;
                    text-decoration: underline;
                }
    </style>

</head>
<body>
    <nav class="navbar navbar-dark navbar-expand-md bg-dark fixed-top mb-4">
        <div class="container-fluid">

            <img src="~/Images/logo.jpg" width="50" height="50" class="me-1 navbar-brand" />

            @*@Html.ActionLink("ElectroMart", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@

            <a href="#" class="navbar-brand" style="color:orangered;"><b>ElectroMart</b></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menubar" aria-controls="menubar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse" id="menubar">
                <ul class="nav navbar-nav">
                    <li class="nav-item active">
                        @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link active" })
                    </li>
                    <li>@Html.ActionLink("Brand", "Index", "Brand", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Category", "Index", "Category", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Sub-Category", "Index", "SubCategory", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Product", "Index", "Products", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item" style="color:chocolate">

                        @Html.ActionLink("Order Details", "OrderDetails", "Products", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">

                        @Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>


                </ul>

                <ul class="nav navbar-nav ms-auto">

                    @if (User.Identity.Name == "Admin")
                    {

                        <li class="nav-item">
                            @Html.ActionLink("Management", "Index", "Products", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @*@Html.ActionLink("Report", "ProductsReport", "Report", new { area = "" }, new { @class = "nav-link" })*@
                        </li>
                    }


                </ul>
                @Html.Partial("_LoginPartial")
                @*@Html.Partial("_ShopingPrtial")*@
            </div>

        </div>
    </nav>

    <div>
        @RenderBody()
    </div>

    <footer class="container-fluid py-3 mt-lg-3 mb-0" style="background-color: #cdd4c5;">
        <div class="container ">
            <div class="row">
                <h4 class="display-4 text-center pt-2 pb-4"style="color: darkred;font-weight:bold;"></h4>

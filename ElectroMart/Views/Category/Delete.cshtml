
@model ElectroMart.Models.InputModel.Category

@{
    ViewBag.Title = "Delete";
}

<style>
    .form-container {
        max-width: 800px;
        margin: auto;
        border: 2px solid #ddd;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0,0,0,0.1);
        background-color: #f9f9f9;
        margin-top: 75px;
    }

    .form-title {
        text-align: center;
        font-weight: bold;
        color: darkred;
        margin-bottom: 35px;
        margin-top: 10px;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    .btn {
        margin-top: 1rem;
    }

    .back-to-list {
        margin-top: 1rem;
    }
</style>

<div class="form-container">
    <h2 class="display-3 form-title">Delete Category</h2>
    <h4>Are you sure you want to delete this category?</h4>

    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.CategoryName)</dt>
        <dd>@Html.DisplayFor(model => model.CategoryName)</dd>

        <dt>@Html.DisplayNameFor(model => model.CategoryDescription)</dt>
        <dd>@Html.DisplayFor(model => model.CategoryDescription)</dd>
    </dl>

    <div id="msg"></div>

    @using (Ajax.BeginForm("Delete", "Category", new AjaxOptions { HttpMethod = "POST", OnSuccess = "onDeleteSuccess" }, new { @id = "deleteForm" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a href="@Url.Action("Index", "Category")" class="btn btn-warning">Cancel</a>
        </div>

        <div class="d-flex justify-content-start back-to-list">
            <a href="@Url.Action("Index", "Category")" class="btn btn-link"><i class="fa fa-arrow-circle-left"></i> Back to list</a>
        </div>
    }

</div>

@section scripts {
    <script src="~/Scripts/jquery-3.7.0.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

    <script>
        function onDeleteSuccess(response) {
            $('#msg').html(response);
            setTimeout(function() {
                window.location.href = '@Url.Action("Index", "Category")';
            }, 2000); // Redirect after 2 seconds
        }
    </script>
}

